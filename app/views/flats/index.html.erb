<div class="container my-3 mx-5">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card col-4 p-0">
        <div class="bg-light p-4">
          <h2 class="fs-5"><%= flat.name %></h2>
          <p class="fs-6"><%= flat.address %></p>
          <div class="d-flex gap-3">
            <p class="fs-6 m-0"><i class="fa-solid fa-user-group"></i><%= "   #{flat.number_of_guests}" %></p>
            <p class="fs-6 m-0"><i class="fa-solid fa-euro-sign"></i><%= "   #{flat.price_per_night}" %></p>
          </div>
        </div>
        <div class="d-flex">
          <%= link_to 'More info', flat_path(flat), {:class => "m-0 ps-4 py-3 text-decoration-none", :style => "font-size: 80%"} %>
          <%= link_to 'Edit', edit_flat_path(flat), {:class => "m-0 px-3 py-3 text-decoration-none text-warning", :style => "font-size: 80%"} %>
          <%= link_to 'Remove', flat_path(flat), {:data => {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "m-0 py-3 text-decoration-none text-danger", :style => "font-size: 80%"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
