<img style="background-image: url('https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); width: 100%; height: 320px; background-repeat: no-repeat; background-size: cover; background-position: center;">
<div class="container mw-100 mx-auto px-5 row">
  <div class="col-8">
    <div class="card bg-light p-3">
      <h1 class="fs-3"><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="card bg-light p-3 my-3">
      <h2 class="fs-4">A bit more about this flat...</h2>
      <p class="fs-6"><%= @flat.description %></p>
    </div>
    <div class="card bg-light p-3">
      <h2 class="fs-4">Details</h2>
      <p class="fs-6"><i class="fa-solid fa-user-group"></i><%= "   #{@flat.number_of_guests}" %><i class="fa-solid fa-euro-sign ms-4"></i><%= "   #{@flat.price_per_night}" %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="card bg-light p-3">
      <h3 class="fs-5">Book this place!</h3>
      <p>From:</p>
      <p>To:</p>
      <button type="submit" class="btn btn-success">Book</button>
    </div>
    <div class="card bg-light p-3 my-3">
      <div class="d-flex justify-content-between">
        <p class="m-0">Share</p>
        <ul class="list-unstyled list-group list-group-horizontal gap-1">
          <li><i class="fa-brands fa-square-facebook fs-4"></i></li>
          <li><i class="fa-brands fa-square-twitter fs-4"></i></li>
          <li><i class="fa-brands fa-square-pinterest fs-4"></i></li>
          <li><i class="fa-solid fa-square-envelope fs-4"></i></li>
        </ul>
      </div>
    </div>
  </div>
</div>
